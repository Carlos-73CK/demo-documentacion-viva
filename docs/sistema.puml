@startuml
!includeurl https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml

title "C3 - Diagrama de Componentes: API Gateway"

Container_Boundary(api, "API Gateway") {
    Component(auth, "AuthController", "Node.js", "Gestiona autenticación")
    Component(router, "Enrutador de Peticiones", "Express.js", "Redirige tráfico")
    Component(logger, "Middleware de Logging", "Node.js", "Registra actividad")
}

Person(cliente, "Cliente", "Usuario externo")

cliente --> auth : "Envía credenciales"
auth --> router : "Redirige peticiones"
router --> logger : "Registra tráfico"

@enduml
